{
  "name": "@wayke-se/ecom",
  "version": "1.0.2",
  "description": "A SDK to utilize Wayke e-commerce APIs",
  "main": "src/index.ts",
  "typings": "src/index.d.ts",
  "scripts": {
    "build": "pika build",
    "prebuild": "npm run clean",
    "build:tsc": "tsc",
    "prebuild:tsc": "npm run clean",
    "clean": "rimraf ./dist ./pkg",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json -e 'src/test/**/*' -e 'src/**/*.spec.{ts}' 'src/**/*.{ts}'",
    "prettify": "prettier --write 'src/**/*.{ts,tsx}'",
    "prepare": "npm run prettify && npm run type-check && npm run lint && npm run test",
    "test": "jest --coverage --verbose",
    "pretest": "rimraf ./coverage",
    "type-check": "tsc --noEmit --skipLibCheck",
    "version": "npm run build"
  },
  "keywords": [
    "wayke",
    "ecom"
  ],
  "author": "Björn Vikström",
  "license": "MIT",
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.6.0",
    "@pika/plugin-build-types": "^0.6.0",
    "@pika/plugin-build-web": "^0.6.0",
    "@pika/plugin-ts-standard-pkg": "^0.6.0",
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.2",
    "autofixture": "^1.1.0",
    "coveralls": "^3.0.6",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|js)"
    ]
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "test/*",
            "@types/*",
            "**/*.spec.ts"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "files": [
    "dist-*/"
  ]
}
